@model Haber

@{
    ViewData["Title"] = "Detay";
}
<div class="about-area">
    <div class="container">
        <!-- Hot Aimated News Tittle-->
        @await Component.InvokeAsync("TrendingNow")
        <div class="row">
            <div class="col-lg-8">
                <!-- Trending Tittle -->
                <div class="about-right mb-90">
                    <div class="about-img">
                        <img src="@Model.HaberResimYolu" alt="">
                    </div>
                    <div class="section-tittle mb-30 pt-30">
                        <h3>@Model.HaberBaslik</h3>
                    </div>
                    <div class="about-prea">
                        <p class="about-pera1 mb-25">@Model.HaberTarihi</p>
                    </div>
                    <div class="about-prea">
                        <p class="about-pera1 mb-25">
                            @Model.HaberAciklama
                        </p>
                        <p class="about-pera1 mb-25">
                            @Model.HaberDetay
                        </p>                       
                    </div>
                    <div class="social-share pt-30">
                        <div class="section-tittle">
                            <h3 class="mr-20">Share:</h3>
                            <ul>
                                <li><a href="#"><img src="~/lib/template/img/news/icon-ins.png" alt=""></a></li>
                                <li><a href="#"><img src="~/lib/template/img/news/icon-fb.png" alt=""></a></li>
                                <li><a href="#"><img src="~/lib/template/img/news/icon-tw.png" alt=""></a></li>
                                <li><a href="#"><img src="~/lib/template/img/news/icon-yo.png" alt=""></a></li>
                            </ul>
                        </div>
                    </div>
                </div>                
            </div>
            <div class="col-lg-4">
                <!-- New Poster -->
                <div class="news-poster d-none d-lg-block">

                </div>
            </div>
        </div>
    </div>
</div>
<!-- About US End -->