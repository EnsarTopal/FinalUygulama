@model IEnumerable<Haber>
<style>
    .kısalt {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        overflow: hidden;
        -webkit-box-orient: vertical;
    }
</style>
<div class="recent-articles">
    <div class="container">
        <div class="recent-wrapper">
            <!-- section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle mb-30">
                        <h3>Türkiyeden ve Ekonomiden Haberler</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="recent-active dot-style d-flex dot-style">
                        @foreach (var item in Model)
                        {
                            <div class="single-recent mb-100">
                                <div class="what-img">
                                    <img src="@item.HaberResimYolu" alt="">
                                </div>
                                <div class="what-cap">
                                    <span class="color3 kısalt">@item.Kategori</span>
                                    <h4 class="kısalt"><a asp-controller="Home" asp-action="Detay" asp-route-id="@item.HaberID"></a> @item.HaberBaslik</h4>
                                </div>
                            </div>
                        }                                              
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>