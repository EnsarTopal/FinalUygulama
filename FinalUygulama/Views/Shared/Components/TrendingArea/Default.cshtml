@model IEnumerable<Haber>
<!-- Trending Area Start -->
<style>
    .kısalt {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        overflow: hidden;
        -webkit-box-orient: vertical;
    }
</style>
<div class="trending-area fix">
    <div class="container">
        <div class="trending-main">
            <!-- Trending Tittle -->
            <div class="row">
                <div class="col-lg-8">
                    <!-- Trending Top -->
                    @await Component.InvokeAsync("TrendingAreaTop")
                    <!-- Trending Bottom -->
                    <div class="trending-bottom">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4">
                                    <div class="single-bottom mb-35">
                                        <div class="trend-bottom-img mb-30">
                                            <img style="height: 160px" src="@item.HaberResimYolu" alt="">
                                        </div>
                                        <div class="trend-bottom-cap">
                                            <span class="color-7">@item.Kategori</span>
                                            <h4 class="kısalt"><a asp-route-id="@item.HaberID" asp-action="Detay" asp-controller="Home">@item.HaberAciklama</a></h4>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
                <!-- Right content -->
                @await Component.InvokeAsync("TrendingAreaRight")
            </div>
        </div>
    </div>
</div>
<!-- Trending Area End -->